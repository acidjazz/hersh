.border
  position absolute
  background-color gc(teal1)
  &.vert
    height 12px
    width 100vw
  &.horiz
    width 12px
    height 100vh
  &.top
    top 0px
  &.bottom
    bottom 0px
  &.left
    left 0px
  &.right
    right 0px
.colors
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .cyan
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-image url('/img/background.jpg')
    background-size cover
  > .star
    > svg
      > polygon
        fill gc(teal1)

.blend-multiply
  mix-blend-mode multiply
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  > .video
    position absolute
    top 35%
    left 35%
    width 20%
    height 20%
    background-color rgba(gc(white1), 1)
    > video
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      min-width 100%
      min-height 100%
      width auto
      height auto
  > .blend-screen
    mix-blend-mode screen
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(gc(white1), 1)
    text-align center
    gf(h1)
.star
  position absolute
  width 500px
  height 500px
  top 50%
  left 50%
  margin-top -250px
  margin-left 50px
  > svg
    width inherit
    height inherit
    > polygon
      fill gc(black1)
      &:nth-child(1)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 1s
      &:nth-child(2)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 1.5s
      &:nth-child(3)
        animation fadeIn 0.5s ease-in-out both
        animation-delay 2s
.content
  position absolute
  width 300px
  height 400px
  top 50%
  left 50%
  margin-top -150px
  margin-left -300px
  > .inner
    position relative
    width 100%
    height 100%

    > .logo
      height 40px
      animation fadeIn 0.5s ease-in-out both
      animation-delay 1.6s
      > svg
        height inherit
    > .pronounce
      margin 20px 0
      color gc(black2)
      animation fadeIn 0.5s ease-in-out both
      animation-delay 1.7s
    > .define
      color gc(white1)
      margin 0 0 20px 0
      animation fadeIn 0.5s ease-in-out both
      animation-delay 1.8s
      &.second
        animation-delay 1.9s
    > .bottom
      position absolute
      bottom 0
      animation fadeIn 0.5s ease-in-out both
      animation-delay 2.0s
      > .line
        width 64px
        height 4px
        background-color gc(white1)
      > .email
        margin 20px 0 0 0
        text-decoration none
        > input
          gf(copy1)
          border none
          background-color transparent
          color gc(teal1)
          outline none
          *:active
            outline none

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@media all and (min-width: 1px) and (max-width: 1000px)
  .star
    display none
  .content
    width 250px
    height 300px
    margin-left -125px
    margin-top -150px
